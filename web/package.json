{
  "name": "transmission-web",
  "main": "index.js",
  "repository": "https://github.com/transmission/transmission",
  "license": "MIT",
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ],
    "presets": []
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jquery/deprecated"
    ],
    "globals": {
      "Dialog": "readonly",
      "FileRow": "readonly",
      "Inspector": "readonly",
      "Notifications": "readonly",
      "Prefs": "readonly",
      "PrefsDialog": "readonly",
      "RPC": "readonly",
      "Torrent": "readonly",
      "TorrentRendererCompact": "readonly",
      "TorrentRendererFull": "readonly",
      "TorrentRow": "readonly",
      "Transmission": "readonly",
      "TransmissionRemote": "readonly",
      "Utils": "readonly",
      "isMobileDevice": "readonly",
      "sanitizeText": "readonly",
      "setInnerHTML": "readonly",
      "setTextContent": "readonly",
      "dialog": "writable",
      "transmission": "writable"
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "script"
    },
    "plugins": [
      "jquery"
    ],
    "rules": {
      "array-callback-return": "error",
      "arrow-spacing": "error",
      "block-scoped-var": "error",
      "class-methods-use-this": "error",
      "consistent-return": "error",
      "curly": [
        "error",
        "all"
      ],
      "default-case": "error",
      "default-case-last": "error",
      "default-param-last": "error",
      "eqeqeq": "error",
      "guard-for-in": "error",
      "init-declarations": [
        "error",
        "always"
      ],
      "jquery/no-ajax": "off",
      "jquery/no-bind": "off",
      "jquery/no-slide": "off",
      "jquery/no-trigger": "off",
      "no-caller": "error",
      "no-confusing-arrow": "error",
      "no-constructor-return": "error",
      "no-delete-var": "error",
      "no-dupe-class-members": "error",
      "no-else-return": "error",
      "no-empty-function": "error",
      "no-eq-null": "error",
      "no-eval": "error",
      "no-extend-native": [
        "error",
        {
          "exceptions": [
            "Number"
          ]
        }
      ],
      "no-extra-bind": "error",
      "no-floating-decimal": "error",
      "no-implied-eval": "error",
      "no-invalid-this": "error",
      "no-iterator": "error",
      "no-label-var": "error",
      "no-labels": "error",
      "no-lone-blocks": "error",
      "no-loop-func": "error",
      "no-new": "error",
      "no-new-func": "error",
      "no-new-wrappers": "error",
      "no-proto": "error",
      "no-redeclare": "off",
      "no-restricted-properties": "error",
      "no-return-assign": "error",
      "no-script-url": "error",
      "no-self-compare": "error",
      "no-sequences": "error",
      "no-shadow": "error",
      "no-this-before-super": "error",
      "no-undef-init": "error",
      "no-undefined": "error",
      "no-unmodified-loop-condition": "error",
      "no-unused-expressions": "error",
      "no-unused-labels": "error",
      "no-unused-vars": [
        "error",
        {
          "args": "after-used",
          "vars": "local",
          "varsIgnorePattern": "FileRow|Inspector|PrefsDialog|Utils|isMobileDevice|sanitizeText|setInnerHTML|setTextContent|dialog|transmission"
        }
      ],
      "no-use-before-define": "error",
      "no-useless-backreference": "error",
      "no-useless-call": "error",
      "no-useless-catch": "error",
      "no-useless-computed-key": "error",
      "no-useless-concat": "error",
      "no-useless-constructor": "error",
      "no-useless-escape": "error",
      "no-useless-rename": "error",
      "no-useless-return": "error",
      "no-var": "error",
      "no-void": "error",
      "no-with": "error",
      "object-shorthand": [
        "error",
        "always"
      ],
      "prefer-arrow-callback": "error",
      "prefer-const": "error",
      "prefer-destructuring": "error",
      "prefer-numeric-literals": "error",
      "prefer-object-spread": "error",
      "prefer-regex-literals": "error",
      "prefer-rest-params": "error",
      "prefer-spread": "error",
      "prefer-template": "error",
      "require-await": "error",
      "semi": [
        "error",
        "always"
      ],
      "sort-keys": "error",
      "strict": [
        "error",
        "global"
      ]
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 100,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "vueIndentScriptAndStyle": false
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "declaration-property-value-disallowed-list": null,
      "max-nesting-depth": null,
      "scss/at-mixin-pattern": null,
      "selector-max-compound-selectors": null,
      "selector-max-id": null,
      "selector-no-qualifying-type": null
    }
  },
  "scripts": {
    "css": "sass --no-source-map style/transmission",
    "lint": "prettier --loglevel warn --check index.html style/transmission/*css javascript/*.js && stylelint style/transmission/*css && eslint javascript/*.js",
    "lint:fix": "prettier --loglevel warn -w --check index.html style/transmission/*css style/transmission/*.scss javascript/*.js && stylelint --fix style/transmission/*css && eslint javascript/*.js"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/eslint-parser": "^7.11.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "eslint": "^7.9.0",
    "eslint-plugin-jquery": "^1.5.1",
    "prettier": "^2.1.2",
    "sass": "^1.26.11",
    "stylelint": "^13.7.1",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0"
  }
}
